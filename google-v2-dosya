    <script>
        // Sekme deƒüi≈ütirme fonksiyonu
        function openTab(evt, tabName) {
            let i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tab-content");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tab-button");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].classList.remove("active");
            }
            document.getElementById(tabName).style.display = "block";
            evt.currentTarget.classList.add("active");
        }
        
        // Tema Deƒüi≈ütirme Scripti
        document.addEventListener('DOMContentLoaded', () => {
            // Aktif sekme butonunu tƒ±kla
            const activeButton = document.querySelector('.tab-button.active');
            if (activeButton) {
                activeButton.click();
            }

            // Tema butonu ve body elementini se√ß
            const themeToggleButton = document.getElementById('theme-toggle');
            const body = document.body;

            // Tema deƒüi≈ütirme fonksiyonu
            const toggleTheme = () => {
                body.classList.toggle('dark');
                // Kullanƒ±cƒ±nƒ±n se√ßimini localStorage'a kaydet
                const currentTheme = body.classList.contains('dark') ? 'dark' : 'light';
                localStorage.setItem('theme', currentTheme);
            };

            // Butona tƒ±klama olayƒ± ekle
            themeToggleButton.addEventListener('click', toggleTheme);

            // Sayfa y√ºklendiƒüinde temayƒ± kontrol et
            const savedTheme = localStorage.getItem('theme');
            const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

            // 1. √ñncelik: Kayƒ±tlƒ± tema varsa onu uygula
            if (savedTheme === 'dark') {
                body.classList.add('dark');
            } else if (savedTheme === 'light') {
                body.classList.remove('dark');
            } 
            // 2. √ñncelik: Kayƒ±tlƒ± tema yoksa sistem tercihini kullan
            else if (systemPrefersDark) {
                body.classList.add('dark');
            }
        });

    </script>
</body>
